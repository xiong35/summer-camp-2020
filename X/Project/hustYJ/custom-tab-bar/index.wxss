#tabbar {
  padding-top: 12rpx;
  display: flex;
  height: 100rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
}

#tabbar .tabbar-item {
  flex: 1;
  display: flex;
  position: relative;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

#tabbar .tabbar-item image {
  width: 36rpx;
  height: 42rpx;
  display: block;
}

#tabbar .tabbar-item text {
  padding-top: 16rpx;
  font-size: 28rpx;
  color: var(--grey);
}

#tabbar .tabbar-item .active {
  color: var(--theme);
}

#tabbar .tabbar-mid-btn {
  width: 108rpx;
  height: 108rpx;
  background-image: linear-gradient(45deg, var(--pink), var(--orange));
  border-radius: 50%;
  border: 4px solid white;
  position: absolute;
  top: -42rpx;
}

#tabbar .tabbar-mid-btn .shader {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: relative;
  z-index: 9;
  transition: all 0.3s;
}

#tabbar .tabbar-mid-btn .cross-container {
  transition: all 0.3s;
  width: 100%;
  height: 100%;
}

#tabbar .tabbar-mid-btn .cross-container .cross {
  border: 0.5px solid white;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

#tabbar .tabbar-mid-btn .cross-container .vertical {
  width: 0;
  height: 54rpx;
}

#tabbar .tabbar-mid-btn .cross-container .horizontal {
  width: 54rpx;
  height: 0;
}

#tabbar .hider {
  width: 0;
  height: 0;
  opacity: 0;
  background-color: #ffffff;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
  z-index: 1;
}

#tabbar .post-container {
  position: absolute;
  bottom: -10px;
  transform: scale(0.3);
  z-index: 10;
  width: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  opacity: 0;
  color: #333;
  z-index: 3;
}

#tabbar .post-container image {
  width: 144rpx;
  height: 144rpx;
}

#tabbar .post-container.left {
  left: 0px;
}

#tabbar .post-container.right {
  right: 0px;
}

#tabbar .open {
  background-image: linear-gradient(45deg, white, white);
}

#tabbar .open .shader {
  box-shadow: 1px 1px 3px #afafaf;
}

#tabbar .open .shader .cross-container {
  transform: rotate(135deg);
}

#tabbar .open .shader .cross-container .cross {
  border: 0.5px solid #999;
}

#tabbar .open .hider {
  opacity: 0.88;
  width: 3000rpx;
  height: 3200rpx;
}

#tabbar .open .post-container {
  opacity: 1;
  bottom: 150rpx;
  transform: scale(1);
}

#tabbar .open .post-container.left {
  left: -180rpx;
}

#tabbar .open .post-container.right {
  right: -180rpx;
}
