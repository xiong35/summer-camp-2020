.swiper {
  width: 720rpx;
  height: 576rpx;
  position: relative;
  border-radius: 8px;
  overflow: hidden;
  margin: 15rpx;
}

.swiper .swiper-item {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.detail {
  padding: 20rpx;
}

.detail .title,
.detail .price {
  font-size: 40rpx;
}

.detail .title {
  float: left;
  color: #333;
}

.detail .price {
  float: right;
  color: var(--theme);
}

.detail .description {
  clear: both;
  display: block;
  padding: 36rpx 0;
  color: #666;
}

.detail .hr {
  width: 100%;
  height: 0;
  border: 0.5px solid #ddd;
  margin-bottom: 36rpx;
}

.detail .where,
.detail .when {
  font-size: 24rpx;
  color: #ccc;
}

.detail .where {
  float: left;
}

.detail .when {
  float: right;
}

.bottom {
  position: fixed;
  bottom: 36rpx;
  display: flex;
  width: 710rpx;
  height: 96rpx;
  left: 20rpx;
}

.bottom .collect,
.bottom .share {
  flex: 0 0 25%;
  color: var(--grey);
  font-weight: normal;
  padding: 0;
  line-height: 0;
  border-radius: 0;
  font-size: 36rpx;
  background-color: #fff;
}

.bottom .collect image,
.bottom .share image {
  width: 35rpx;
  height: 35rpx;
  margin: 3px;
}

.bottom .copy {
  flex: 1;
  color: white;
  background-image: linear-gradient(45deg, var(--pink), var(--orange));
  font-size: 36rpx;
  border-radius: 4px;
}

.hot-status {
  padding: 6px 12px;
  font-size: 12px;
  position: fixed;
  right: 34rpx;
  top: 28rpx;
  background-color: #f9f9f9;
  color: #888;
  border-radius: 40px;
  box-shadow: 2px 2px 5px #f0f0f088;
}
