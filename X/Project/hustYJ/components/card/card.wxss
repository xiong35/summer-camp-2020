.card {
  width: 100%;
  border-radius: 4px;
  overflow: hidden;
  margin: 10px 0;
  box-shadow: 2px 3px 10px #d2d2d2;
}

.card image {
  width: 346rpx;
  height: 259.5rpx;
}

.card .card-info {
  padding: 20rpx;
  font-size: 16px;
  position: relative;
}

.card .card-info .price {
  font-weight: bold;
  color: var(--theme);
  margin-right: 2px;
  position: relative;
  left: -2px;
}

.card .card-info .description {
  color: #666;
}

.card .card-info .info {
  display: flex;
  margin-top: 30rpx;
  font-size: 12px;
  justify-content: space-between;
  color: #ccc;
}
