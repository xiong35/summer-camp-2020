.card {
  width: 710rpx;
  margin-bottom: 20rpx;
  border-radius: 12px;
  background-color: #fff;
  overflow: hidden;
  box-shadow: 2px 2px 7px #eee;
}

.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  width: 100vw;
}

.main {
  height: 524rpx;
  flex-direction: column;
}

.main .user-container {
  width: 100%;
  height: auto;
  padding-top: 64rpx;
  text-align: center;
}

.main .user-container .avatar-container {
  height: 144rpx;
  width: 144rpx;
  margin: auto;
  position: relative;
  margin-bottom: 40rpx;
}

.main .user-container .avatar-container .avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.main .user-container .avatar-container .auth {
  width: 100rpx;
  height: 32rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
}

.main .user-container .user-name {
  font-size: 40rpx;
  font-weight: bold;
}

.main .info-container {
  margin-top: 64rpx;
  display: flex;
  height: 120rpx;
}

.main .info-container .info-item {
  flex: 1;
  text-align: center;
}

.main .info-container .info-item .num {
  color: var(--theme);
  display: block;
  margin-top: 8rpx;
  font-size: 40rpx;
}

.main .info-container .info-item .title {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: var(--grey);
}

.main .info-container .info-item:not(:last-child) {
  border-right: 1px solid #dddd;
}

.my,
.function {
  display: flex;
  flex-direction: column;
}

.my .icon,
.function .icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 6rpx;
  right: 14rpx;
}

.my .bar,
.function .bar {
  flex: 1;
  padding: 20rpx 0 28rpx 32rpx;
  margin: 0 20rpx 0 20rpx;
  color: var(--grey);
  font-size: 32rpx;
}

.my .bar:not(:last-child),
.function .bar:not(:last-child) {
  border-bottom: 1px solid #dddd;
}
