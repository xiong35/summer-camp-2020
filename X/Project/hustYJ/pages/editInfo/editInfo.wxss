.container {
  width: 710rpx;
  margin: 20rpx;
}

.container .box {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  width: 100%;
}

.container .box .des-input {
  height: 200rpx;
}

.container .box .name {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.container .picked {
  color: #333;
}

.devider {
  width: 100%;
  height: 0;
  border: 0.5px solid #eee;
  margin: 36rpx 0;
}

.submit {
  width: 586rpx;
  height: 88rpx;
  background-color: #ccc;
  border-radius: 12px;
  margin: 100rpx auto;
  color: white;
}

.submit.active {
  background-image: linear-gradient(45deg, var(--pink), var(--orange));
}
